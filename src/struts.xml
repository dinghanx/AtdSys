<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">
    
<struts>
	<!-- useful properties in developmental phase START -->
	<constant name="struts.devMode" value="true" />
	<constant name="struts.configuration.xml.reload" value="true" />
	<!-- useful properties in developmental phase END -->
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<constant name="struts.action.extension" value="do" />
	<constant name="struts.enable.SlashesInActionNames" value="true" />
	<constant name="struts.mapper.alwaysSelectFullNamespace" value="false"/>
	
	<package name="atd" namespace="/atd" extends="struts-default" strict-method-invocation="false">
		<action name="*/*" class="demo.{1}Action" method="{2}">
			<result>/atd/{1}/{2}.jsp</result>
		</action>
	</package>
	
</struts>